<div class= 'text-black'>
  <div class= " w-25 container 'text-black'">
    <%= form_for @project, html: {multipart: true}, remote: true do |f| %>
      <% if @project.errors.any? %>
        <h2>Errors:</h2>
        <ul>
          <%@project.errors.full_messages.each do |message|%>
          <li> <%= message %></li>
          <%end%>
        </ul>
      <%end%>
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter Project title" %>

      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Write Project description" %>

      <%= f.label :assign_to_developer, class: "form-label" %>
      <%= f.collection_select(:user_ids, User.developer, :id, :name, {}, multiple: true, class: "form-control form-control-sm") %>

      <%= f.label :assign_to_qa, class: "form-label" %>
      <%= f.collection_select(:user_ids, User.qa, :id, :name, {}, multiple: true, class: "form-control form-control-sm") %>
      <span>
        <%= f.submit "Submit", class: "btn btn-success"%>
      </span>
   <%end%>
  </div>
</div>
